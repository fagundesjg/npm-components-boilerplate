{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "types": ["react", "jest"],
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "core",
    "core-esm",
    "lib",
    "lib-esm",
    "*.js",
    "dist"
  ]
}
