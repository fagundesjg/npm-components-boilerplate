{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "./core",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "types": ["react", "jest"],
    "moduleResolution": "node",
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "lib",
    "lib-esm",
    "core",
    "core-esm",
    "src/sandbox",
    "src/index.tsx",
    "dist"
  ]
}
